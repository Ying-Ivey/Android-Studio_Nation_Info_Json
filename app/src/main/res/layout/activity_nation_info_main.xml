<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="26sp"
    tools:context=".NationInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="121dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="272dp"
                android:layout_height="42dp"
                android:fontFamily="sans-serif-medium"
                android:text="The name of country"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <AutoCompleteTextView
                android:id="@+id/txtCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/imgCountry"
                android:layout_width="247dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:layout_marginBottom="18dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/countryPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/population"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/countryArea"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/area"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCName"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtCPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtCArea"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


